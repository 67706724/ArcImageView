<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="arcHeight" format="dimension"/>

    <declare-styleable name="ArcView">
        <attr name="arcHeight"/>
        <attr name="bgColor" format="color"/>
    </declare-styleable>


    <declare-styleable name="ArcImageView">
        <attr name="arcHeight"/>
        <attr name="bColor" />
        <attr name="mDirection" format="enum">
            <enum name="out" value="0"/>
            <enum name="inner" value="1"/>
        </attr>
        <attr name="mPosition" format="enum">
            <enum name="left" value="0"/>
            <enum name="top" value="1"/>
            <enum name="right" value="2"/>
            <enum name="bottom" value="3"/>
        </attr>
    </declare-styleable>
    
    <declare-styleable name="CircleImageView">
        <attr name="bColor" format="color"/>
        <attr name="howMuch" format="enum">
            <enum name="circle" value="0"/>
            <enum name="oval" value="1"/>
        </attr>
    </declare-styleable>

</resources>